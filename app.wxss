.tingli-cate-box{
  background-color:#fff;
  white-space:nowrap;
  border-bottom:1rpx solid #eee;
  padding:26rpx 0;
}
.tingli-cate-box .item{
  display: inline-block;
  border-left:1rpx solid #eee;
  font-size:30rpx;
  font-weight:700;
  padding:0 18rpx;
  line-height:60rpx;
  height:60rpx;
}
.tingli-cate-box .item-name{
  display: inline-block;
  max-width: 5.5em;
}
.tingli-cate-box .item.current{
  color:#07aa4e;
}
.tingli-cate-box .item.current:after{
  border-color:#07aa4e transparent transparent transparent;
}

.tingli-cate-box .item:first-child{
  border-left:0;
}
.tingli-cate-box .item:after{
  content:"";
  /* display:inline-block; */
  border:0 solid #666;
  border-width:12rpx 10rpx 12rpx 10rpx;
  width:0;
  height:0;
  vertical-align:-4rpx;
  margin-left:14rpx;
  border-color:#666 transparent transparent transparent;
}

.tingli-cate-child-box{
  border-bottom:1rpx solid #eee;
  padding:26rpx 0;
}
.tingli-cate-child-box .item{
  display: inline-block;
  font-size:30rpx;
  padding:15rpx 40rpx;
  border-radius: 40rpx;
  margin:0 26rpx 0 0;
  background-color: #eee;
}
.tingli-cate-child-box .item:first-child{
  margin-left:26rpx;
}
.tingli-cate-child-box .item.current{
  background-color: #07aa4e;
  color:#fff;
}
.tingli-cate-child-box .item.current:after{
  border-color:#07aa4e transparent transparent transparent;
}

/*听力筛选底部弹出菜单*/
.filterListItemContent{
  position: fixed;
  bottom:0;
  width:100%;
  background-color: #fff;
  box-shadow: 0 -10rpx 20rpx rgba(0,0,0,.1);
}
.filterListItemContent .scroll-box{
  max-height:600rpx;
}
.filterListItemContent .scroll-box-inner{
  padding:24rpx 40rpx;
}
.filterListItemContent .scroll-box-inner .filter-item{
  padding:20rpx;
  border-radius:6rpx;
  background-color:#eee;
  font-size:30rpx;
  text-align: center;
  margin:20rpx 0;
}
.filterListItemContent .scroll-box-inner .filter-item.filter-item-selected{
 background-color:#07aa4e;
 color:#fff;
}
.filter-list-content-bottom{
  font-size:30rpx;
  height: 40rpx;
  line-height:40rpx;
  padding:20rpx;
  text-align:center;
  border-top:1px solid #eee;
}

.filter-list-series .title{
  font-size:28rpx;
  color:#999;
  padding:10rpx 0;
}

/*筛选结果*/
.res-list-wrap{}
.res-list-wrap .res-list-item{
  position:relative;
  padding:30rpx 30rpx 30rpx 30rpx;
  border-bottom:1rpx solid #eee;
}
.res-list-wrap .res-list-item:first-child{
  /*border-top:1rpx solid #eee;*/
}
.res-list-wrap .res-list-item .item-title{
  font-size:32rpx;
}
.res-list-wrap .res-list-item .item-time{
  display: block;
  color:#999;
  font-size:28rpx;
  margin-top:10rpx;
}
.res-list-wrap .res-list-item .item-down{
  position:absolute;
  right:0;
  top:0;
  padding:48rpx 40rpx 48rpx 20rpx;
}
/*遮罩层*/
.layer-shade{
  position:fixed;
  top:0;
  left:0;
  bottom:0;
  right:0;
  background-color:rgba(0,0,0,.4);
}

.filter-list-content-top{
  font-size:30rpx;
  padding:30rpx;
  border-bottom:1rpx solid #eee;
}
.filter-list-content-top .audio-list-play-icon{
