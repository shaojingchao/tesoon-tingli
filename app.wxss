}


/* 搜索框 */
.tingli-search-box{
padding:30rpx 100rpx 30rpx 30rpx;
border-bottom:1rpx solid #eee;

}
.tingli-search-box input{
  border:1rpx solid #eee;
  box-sizing:content-box;
  height:62rpx;
  line-height:62rpx;
  padding:0rpx 20rpx;
  border-radius:35rpx 0 0 35rpx;
  text-align: center;
}
.tingli-search-box .search-btn{
  box-sizing:content-box;
  float:right;
  height:66rpx;
  line-height:68rpx;
  padding:0 30rpx;
  letter-spacing: 6rpx;
  margin-right:-70rpx;
  border:1rpx solid #eee;
  border-left:none;
  border-radius: 0 35rpx 35rpx 0;
}

